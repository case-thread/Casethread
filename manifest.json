{
  "manifest_version": 3,
  "name": "Case Thread",
  "version": "1.0.0",
  "description": "AI-assisted summaries to help organize and review court judgments.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Case Thread - Legal Analysis",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "options_page": "settings.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["config.js", "icons/CaseThread_compact.png"],
      "matches": ["*://*/*"]
    }
  ]
}
